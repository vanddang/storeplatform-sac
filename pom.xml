<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.skplanet</groupId>
		<artifactId>storeplatform-parent</artifactId> 
		<version>1.0.0-SNAPSHOT</version>
		<relativePath>../storeplatform-parent</relativePath>
	</parent>
	<artifactId>storeplatform-sac-client</artifactId>
	<packaging>jar</packaging>
	<name>Store Platform System - Store API Center Client</name>
	<description>Store Platform System</description>
    <repositories>
         <repository>
              <id>team-store-groups</id>
              <name>Store Dev Groups</name>
              <url>http://mvn.skplanet.com/content/repositories/team-store-groups</url>
         </repository>
    </repositories>
	<profiles>
		<profile>
			<id>Windows-protobuf-compiler</id>
			<activation>
				<os>
					<family>Windows</family>
				</os>
			</activation>
			<properties>
				<protobuf.compiler>/storeplatform/bin/protobuf/protoc-win32.exe</protobuf.compiler>
			</properties>
		</profile>
		<profile>
			<id> MacOS-protobuf-compiler </id>
			<activation>
				<os>
					<family>Mac OS</family>
				</os>
			</activation>
			<properties>
				<protobuf.compiler>/usr/local/bin/protoc</protobuf.compiler>
			</properties>
		</profile>
		<profile> <!-- citstorewas-dev1 -->
			<id> Linux-protobuf-compiler </id>
			<activation>
				<os>
					<family>Linux</family>
				</os>
			</activation>
			<properties>
				<protobuf.compiler>/app/protobuf/bin/protoc</protobuf.compiler>
			</properties>
		</profile>
	</profiles>
	
	<pluginRepositories>
		<pluginRepository>
			<id>dtrott</id>
			<url>http://maven.davidtrott.com/repository</url>
		</pluginRepository>
	</pluginRepositories>
	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
			</resource>
			<resource>
				<directory>src/main/proto</directory>
			</resource>
		</resources>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>com.google.protobuf.tools</groupId>
										<artifactId>maven-protoc-plugin</artifactId>
										<versionRange>[0.1.10,)</versionRange>
										<goals>
											<goal>compile</goal>
											<goal>testCompile</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore></ignore>
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
		<plugins>
			<plugin>
				<groupId>com.google.protobuf.tools</groupId>
				<artifactId>maven-protoc-plugin</artifactId>
				<version>0.1.10</version>
				<executions>
					<execution>
						<phase>generate-sources</phase>
						<goals>
							<goal>compile</goal>
						</goals>
						<configuration>
							<protoSourceRoot>${basedir}/src/main/proto/</protoSourceRoot>
							<protocExecutable>${protobuf.compiler}</protocExecutable>
							<includes>
								<param>**/*.proto</param>
							</includes>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<version>1.3</version>
				<executions>
					<execution>
						<id>add-source</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>add-source</goal>
						</goals>
						<configuration>
							<sources>
								<source>target/generated-sources/protoc</source>
							</sources>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	
	<dependencies>
		<!-- StorePlatform Projects -->
		<dependency>
			<groupId>com.skplanet</groupId>
			<artifactId>storeplatform-framework</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>com.skplanet</groupId>
			<artifactId>storeplatform-test</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
		<!-- Web Libs -->
	</dependencies>
</project>