<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
    PUBLIC "-//mybatis.org//DTD Config 3.0//EN" 
    "HTTP://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

    <!-- Definition of myBatis Configuration -->
    <settings>
        <!-- 설정에서 각 mapper 에 설정된 캐시를 전역적으로 사용할지 말지에 대한 여부 -->
        <setting name="cacheEnabled" value="true" />
        <!-- 생성키에 대한 JDBC 지원을 허용 -->
        <setting name="useGeneratedKeys" value="true" />
        <!-- REUSE 실행자는 PreparedStatement 를 재사용한다. -->
        <setting name="defaultExecutorType" value="REUSE" />
        <setting name="safeResultHandlerEnabled" value="false" />
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>

    <!--
    <typeHandlers>
        <typeHandler javaType="String" jdbcType="INTEGER" handler="com.skplanet.icms.commons.mybatis.BlankIntegerTypeHandler" />
    </typeHandlers>
    -->

    <!-- Definition of MAPPER Alias -->
    <typeAliases> 
        <typeAlias alias="AclAuthKeyInfo"     type="com.skplanet.storeplatform.sac.runtime.acl.vo.AclAuthKeyInfo" />
        <typeAlias alias="AclAuthInfo"        type="com.skplanet.storeplatform.sac.runtime.acl.vo.AclAuthInfo" />
        <typeAlias alias="InterfaceInfo"      type="com.skplanet.storeplatform.sac.runtime.cache.vo.InterfaceInfo" />
        <typeAlias alias="ServiceInfo"      type="com.skplanet.storeplatform.sac.runtime.cache.vo.ServiceInfo" />
        <typeAlias alias="BypassInfo"      type="com.skplanet.storeplatform.sac.runtime.cache.vo.BypassInfo" />
        
        <!-- 전시 상품 공통 -->
        <typeAlias alias="ProductCommonRequest"  type="com.skplanet.storeplatform.sac.client.product.vo.common.ProductCommonRequest" />
        <typeAlias alias="ProductCommonDTO"  type="com.skplanet.storeplatform.sac.product.vo.ProductCommonDTO" />
        
        <!-- 일반카테고리 앱 상품 조회 -->
        <typeAlias alias="CategoryAppReq"  type="com.skplanet.storeplatform.sac.client.display.vo.category.CategoryAppReq" />
        <typeAlias alias="CategoryAppDTO"  type="com.skplanet.storeplatform.sac.display.category.vo.CategoryAppDTO" />
        
        <!-- 일반카테고리 ebook/만화 상품 조회 -->
        <typeAlias alias="FeatureVodProductRequest"  type="com.skplanet.storeplatform.sac.client.product.vo.feature.FeatureVodProductRequest" />
        <typeAlias alias="FeatureVodProductDTO"  type="com.skplanet.storeplatform.sac.product.vo.FeatureVodProductDTO" />
        
        <typeAlias alias="MenuRequest"  type="com.skplanet.storeplatform.sac.client.product.vo.menu.MenuRequest" />
        <typeAlias alias="MenuDetailDTO"  type="com.skplanet.storeplatform.sac.product.vo.MenuDetailDTO" />
        			
        <!-- 일반카테고리 웹툰 상품 조회 -->        													
        <typeAlias alias="CategoryWebtoonReq"  type="com.skplanet.storeplatform.sac.client.display.vo.category.CategoryWebtoonReq" />
        <typeAlias alias="CategoryWebtoonDTO"  type="com.skplanet.storeplatform.sac.display.category.vo.CategoryWebtoonDTO" />
        <!-- 운영자 추천 웹툰 상품 조회 -->   
        <typeAlias alias="RecommendWebtoonReq"  type="com.skplanet.storeplatform.sac.client.display.vo.feature.recommend.RecommendWebtoonReq" />
        <typeAlias alias="RecommendWebtoonDTO"  type="com.skplanet.storeplatform.sac.display.feature.recommend.vo.RecommendWebtoonDTO" />       
        
         <!-- 특정 단말 조회 -->
        <typeAlias alias="DeviceProfileRequest"  type="com.skplanet.storeplatform.sac.client.display.vo.device.DeviceProfileReq" />
        <typeAlias alias="DeviceProfileDTO"  type="com.skplanet.storeplatform.sac.display.device.vo.DeviceProfileDTO" />
        
        <!--  특정 상품 조회 -->
        <typeAlias alias="SpecificProductDTO"  type="com.skplanet.storeplatform.sac.display.category.vo.CategorySpecificDTO" />
    </typeAliases>
</configuration>
