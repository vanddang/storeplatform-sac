<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="seller">

    <!-- 판매자 탈퇴사유 리스트 조회 -->
    <select id="getSellerSecedeResonList" parameterType="SellerSecedeResonListRequestVO" resultType="SellerSecedeResonVO">
		SELECT CD_ID AS secedeReasonCode,
				CD_NM AS secedeReasonMessage
		  FROM TB_CM_CD
		 WHERE GRP_CD_ID = 'US0018'
		 <if test="langCd != null">
		 	AND LANG_CD = #{langCd}
		 </if>
		 AND USE_YN = 'Y'
		 ORDER BY CD_ID
    </select>

</mapper>

