<!-- ====================================================================  
# Important
# CONSOLE APPENDER NAME : CONSOLE
# CUSTOM APPENDER NAMING RULE : ${projectName}_APPEND_NAME
# ex) MEMBER_FILE_APPENDER
==================================================================== -->
<included>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}|%-5level|%X{GUID}|%X{requestSystemId}|%X{interfaceId}|${hostName}|${instanceName}|%X{type}|%logger{36}:%file:%method:%line]\t%msg%n</pattern>
        </layout>
    </appender>
    
    <appender name="SERVICE_STOREPLATFORM-SAC_ROLLINGFILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${catalina.home}/logs/sac/svc/service_storeplatform-sac.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${catalina.home}/logs/sac/svc/service_storeplatform-sac_%d{yyyyMMdd}.log</FileNamePattern>            
        </rollingPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}|%-5level|%X{GUID}|%X{requestSystemId}|%X{interfaceId}|${hostName}|${instanceName}|%X{type}|%logger{36}:%file:%method:%line]\t%msg%n</pattern>
        </layout>
    </appender>
    
    <appender name="ERROR_SERVICE_STOREPLATFORM-SAC_ROLLINGFILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${catalina.home}/logs/sac/err/error_storeplatform-sac.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${catalina.home}/logs/sac/err/error_storeplatform-sac_%d{yyyyMMdd}.log</FileNamePattern>            
        </rollingPolicy> 
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}|%-5level|%X{GUID}|%X{requestSystemId}|%X{interfaceId}|${hostName}|${instanceName}|%X{type}|%logger{36}:%file:%method:%line]\t%msg%n</pattern>
        </layout>
    </appender>
    
    <appender name="OMC_요건1_STOREPLATFORM-SAC_ROLLINGFILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${catalina.home}/logs/sac/omc/omc_요건1.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${catalina.home}/logs/sac/omc/omc_요건1_%d{yyyyMMdd}.log</FileNamePattern>            
        </rollingPolicy> 
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}|%-5level|%X{GUID}|%X{requestSystemId}|%X{interfaceId}|${hostName}|${instanceName}|%X{type}|%logger{36}:%file:%method:%line]\t%msg%n</pattern>
        </layout>
    </appender>
    
    <appender name="FDS_STOREPLATFORM-SAC_ROLLINGFILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${catalina.home}/logs/sac/fds/fds.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${catalina.home}/logs/sac/fds/fds_%d{yyyyMMdd}.log</FileNamePattern>            
        </rollingPolicy> 
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d{yyyyMMddHHmmssSSS}\t%-5level\t%X{GUID}\t%X{requesTenantId}\t%X{interfaceId}\t${hostName}\t${instanceName}\t%X{type}\t%file:%method:%line\t${logVersion}\t%X{requestSystemId}\t%X{insdMbrNo}\t%X{insdDeviceId}\t%X{mbrNo}\t%X{deviceId}\t%X{mbrId}\t%X{resultCode}\t%X{resultMessage}\t%msg%n</pattern>
        </layout>
    </appender>
    
    <!-- WARN, INFO, DEBUG 서비스 로그 -->
    <logger name="com.skplanet.storeplatform.sac" additivity="false">
        <level value="INFO" />
        <appender-ref ref="SERVICE_STOREPLATFORM-SAC_ROLLINGFILE" />
    </logger>
    
    <!-- ERROR 서비스 로그 -->
    <logger name="com.skplanet.storeplatform.sac" additivity="false">
        <level value="ERROR" />
        <appender-ref ref="ERROR_SERVICE_STOREPLATFORM-SAC_ROLLINGFILE" />
    </logger>
    
    <!-- OMC 로그 -->
    <logger name="OMC_요건1" additivity="false">
        <level value="INFO" />
        <appender-ref ref="OMC_요건1_STOREPLATFORM-SAC_ROLLINGFILE" />
    </logger>
    
    <!-- FDS 로그 -->
    <logger name="FDS_SAC_LOGGER" additivity="false">
        <level value="INFO" />
        <appender-ref ref="FDS_STOREPLATFORM-SAC_ROLLINGFILE" />
    </logger>
    
    <!-- LOCAL 개발 CONSOL  로그 -->
    <logger name="com.skplanet.storeplatform.sac" additivity="false">
        <level value="DEBUG" />
        <appender-ref ref="CONSOLE" />
    </logger>
    
    <!-- plandas 로그 -->
    <logger name="com.skplanet.plandasj" additivity="false">
        <level value="INFO" />
        <appender-ref ref="CONSOLE" />
    </logger>
    <logger name="com.skplanet.spring" additivity="false">
        <level value="INFO" />
        <appender-ref ref="CONSOLE" />
    </logger>
    <logger name="org.apache.zookeeper" additivity="false">
        <level value="ERROR" />
        <appender-ref ref="CONSOLE" />
    </logger>
    
    <!-- 기본jdbc 로그 사용 안함 -->
    <logger name="jdbc.resultset" additivity="false">
        <level value="OFF" /> 
    </logger>
    <logger name="jdbc.audit" additivity="false">
        <level value="OFF" /> 
    </logger>
    <logger name="jdbc.sqltiming" additivity="false">
        <level value="OFF" /> 
    </logger>
    
    <root>
        <level value="INFO" />
        <appender-ref ref="CONSOLE" />
    </root>
    
</included>