<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                           http://www.springframework.org/schema/util
                           http://www.springframework.org/schema/util/spring-util-3.2.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context-3.2.xsd">

    <context:property-placeholder properties-ref="propertiesForSac" /> 
    
    <bean id="logInitializer" class="com.skplanet.storeplatform.framework.core.log.logback.LogInitializer" init-method="initialize" destroy-method="destroy" >
        <property name="logVersion" value="#{propertiesForSac['skp.common.fds.logversion']}"/>
        <property name="logbackPath">
            <list>
                <value>member/log/logback-${spring.profiles.active}.xml</value>
                <value>purchase/log/logback-${spring.profiles.active}.xml</value>
            </list>
        </property>
    </bean>
        
    <beans profile="local"> 
        <util:properties id="propertiesForSac" location="classpath:sac/properties/app.local.properties" /> 
        <bean id="config" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
            <property name="fileEncoding" value="UTF-8" />
            <property name="locations" >
                <list merge="true"><value>classpath:sac/conf/external.local.properties</value></list>
            </property>
        </bean>
    </beans>

    <beans profile="dev">
       <util:properties id="propertiesForSac" location="classpath:sac/properties/app.dev.properties" /> 
       <bean id="config" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
            <property name="fileEncoding" value="UTF-8" />
            <property name="locations" >
                <list merge="true"><value>classpath:sac/conf/external.dev.properties</value></list>
            </property>
        </bean>
    </beans>

    <beans profile="stag">   
        <util:properties id="propertiesForSac" location="classpath:sac/properties/app.stag.properties" /> 
        <bean id="config" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
            <property name="fileEncoding" value="UTF-8" />
            <property name="locations" >
                <list merge="true"><value>classpath:sac/conf/external.stag.properties</value></list>
            </property>
        </bean>
    </beans>

    <beans profile="real">
       <util:properties id="propertiesForSac" location="classpath:sac/properties/app.local.properties" /> 
       <bean id="config" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
            <property name="fileEncoding" value="UTF-8" />
            <property name="locations" >
                <list merge="true"><value>classpath:conf/external.real.properties</value></list>
            </property>
        </bean>
    </beans> 
</beans>